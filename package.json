{
  "name": "multi-vendor-ecommerce",
  "version": "1.0.0",
  "description": "A full-stack multi-vendor e-commerce platform built with React.js, Node.js, Express.js, MongoDB, and Redux",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && pnpm run dev",
    "build": "cd client && pnpm run build",
    "start": "cd server && npm start",
    "install-server": "cd server && npm install",
    "install-client": "cd client && pnpm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": [
    "ecommerce",
    "multi-vendor",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "redux",
    "tailwindcss"
  ],
  "author": "Averoxz",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "nodemon": "^3.1.10"
  }
}
